generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_DB_URL")
}

model Upload {
  id        Int    @id @default(autoincrement())
  key       String @unique
  shopToken String
  status    String
  createdAt DateTime @default(now())
}

model Job {
  id             String   @id @default(dbgenerated("gen_random_uuid()"))
  shopToken      String
  userImageUrl   String
  productImageUrl String
  runId          String?
  status         String
  finalUrl       String?
  error          Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime?
}

model Shop {
  id         Int     @id @default(autoincrement())
  domain     String  @unique
  tokenHash  String
  createdAt  DateTime @default(now())
}
